apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ domain | replace('.', '-') }}
  namespace: istio-system
spec:
  dnsNames:
    - "rancher.{{domain}}"
    - "keycloak-rancher.{{domain}}"
  issuerRef:
    name: letsencrypt-staging
    kind: ClusterIssuer
  secretName: {{ domain | replace('.', '-') }}
